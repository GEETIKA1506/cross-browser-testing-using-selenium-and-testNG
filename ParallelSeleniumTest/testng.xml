<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelBrowserSuite" parallel="tests" thread-count="3">
    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="parallelTesting.ChromeTest"/>
        </classes>
    </test>

    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="parallelTesting.EdgeTest"/>
        </classes>
    </test>

    <test name="BraveTest">
        <parameter name="browser" value="brave"/>
        <classes>
            <class name="parallelTesting.BraveTest"/>
        </classes>
    </test>
</suite>
